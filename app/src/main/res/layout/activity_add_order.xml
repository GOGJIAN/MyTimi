<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEEEE"
    tools:context="com.jianjian.android.mytimi.activity.addOrderActivity">

    <TextView
        android:id="@+id/pay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="@string/pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/income_text"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/income"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/info_back"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_text"/>

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_drink"
        app:layout_constraintBottom_toBottomOf="@id/info_back"
        app:layout_constraintTop_toTopOf="@id/info_back"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/selected_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@id/selected_img"
        app:layout_constraintBottom_toBottomOf="@id/info_back"
        app:layout_constraintTop_toTopOf="@id/info_back"
        tools:text="一般"/>

    <EditText
        android:id="@+id/money_edit"
        android:hint="@string/moneyString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/info_back"
        app:layout_constraintTop_toTopOf="@id/info_back"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/icon_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/info_back"/>

</android.support.constraint.ConstraintLayout>
